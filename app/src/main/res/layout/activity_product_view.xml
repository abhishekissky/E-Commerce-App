<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activities.ProductViewActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#0D66DA18"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:id="@+id/back_img"
                android:background="@drawable/green_oval_background"
                android:src="@drawable/ic_baseline_arrow_back_24"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_marginLeft="230dp"
                android:src="@drawable/ic_baseline_share_24"
                android:background="@drawable/green_oval_background"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icons_heart"
                android:background="@drawable/green_oval_background"/>

        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/viewPager"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_gravity="center"
            >
        </androidx.viewpager.widget.ViewPager>

        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/ProductName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Onion"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginLeft="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="M.R.P.:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="₹"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/product_mrpTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_colour"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="Price:"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="₹"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:textColor="#F60101"/>

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="50"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:textColor="#F60101"/>\

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(₹54.00/kg)"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:textColor="#F60101"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="You Save:"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F60101"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="₹"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F60101"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:text="5.00"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F60101"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:text="(2%)"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inclusive all Tax"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="italic"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seller Name:"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:text="Seller"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/qty"
                android:text="Quantity "
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"/>


                <TextView
                    android:id="@+id/product_qty_In"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_below="@+id/save_rupee"
                    android:background="@drawable/green_oval_background"
                    android:layout_toRightOf="@id/save_rupee"
                    android:text="+"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_qty"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="1"/>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_below="@+id/save_rupee"
                    android:background="@drawable/green_oval_background"
                    android:text="-"/>

        </LinearLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Easy 15 days returns and Exchange"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Choose to return or exchange for another product"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="Product Details"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Dummy"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Delivery Service"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_colour"
                android:backgroundTint="@android:color/white"
                android:text="WishList"
                android:textColor="#ffff"
                android:textSize="16dp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_colour"
                android:backgroundTint="#43750C"
                android:text="Add to Card"
                android:layout_margin="5dp"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
